<% provide(:title, 'Users') %>
<div class="container">
  <h1>ユーザ一覧</h1>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <%= will_paginate %>
      <table class="table table-hover" id="table-users">
        
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to "#{user.name}", user_path(user) %>
                 | 
                <%= link_to "基本情報編集", user_path(user) %>
                <% unless user.admin? %>
                   | 
                  <%= link_to "削除", 
                    user_path(user),
                    method: :delete,
                    data: {confirm: "#{user.name}を削除します。よろしいですか？"} 
                  %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>

      </table>
      <%= will_paginate %>
    </div>
  </div>
</div>